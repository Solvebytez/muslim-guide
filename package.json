{
  "name": "muslim-guide-backend",
  "version": "1.0.0",
  "description": "Backend API for Muslim Guide App",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/app.ts",
    "dev:prod": "nodemon --exec ts-node src/app.production.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "start:prod": "node dist/app.production.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:api": "node tests/api-test.js",
    "test:error": "node tests/error-test.js",
    "test:load": "artillery run tests/load-test.yml",
    "test:k6": "k6 run tests/k6-test.js",
    "test:all": "npm run test:api && npm run test:error",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop muslim-guide-api",
    "pm2:restart": "pm2 restart muslim-guide-api",
    "pm2:logs": "pm2 logs muslim-guide-api",
    "pm2:monit": "pm2 monit",
    "deploy:test": "npm run build && npm run test:all",
    "deploy:prod": "npm run build && npm run test:all && npm run pm2:restart",
    "seed:users": "ts-node src/seed/seed-demo-users.ts",
    "test:login": "node test-login.js",
    "check:users": "node check-users.js",
    "fix:users": "node fix-users.js"
  },
  "keywords": [
    "muslim",
    "guide",
    "restaurants",
    "prayer",
    "api"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "@types/mongoose": "^5.11.96",
    "artillery": "^2.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.30.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "mongoose": "^8.15.1",
    "multer": "^2.0.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^7.0.3",
    "nodemon": "^3.1.10",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.0.10",
    "@types/nodemailer": "^6.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
